{
  "compilerOptions": {
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "Typings",
    "target": "es5",
    "outDir": "wwwroot/js",
    "rootDir": "Scripts"
  },
  "compileOnSave": true,
  "include": [
    "Typings/index.d.ts",
    "Scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/**/*.ts",
    "Scripts/toolkit/**/*.ts"
  ]
}
