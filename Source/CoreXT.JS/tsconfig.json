{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "traceResolution": true,
    "listFiles": true,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "noEmitHelpers": true,
    "declaration": true,
    "declarationDir": "wwwroot/js",
    //"typeRoots": [ "typings" ],
    "sourceMap": true,
    "target": "es5", // IE11=es5, Edge+ es2015=ES6
    "outDir": "wwwroot/js",
    "downlevelIteration": true,
    "rootDir": "Scripts",
    "lib": [ "dom", "es6", "dom.iterable", "scripthost" ] // (target es5 but use es6 libs, since there is partial support of some es6 in es5; lib options: https://www.typescriptlang.org/docs/handbook/compiler-options.html)
  },
  "include": [
    "typings/**/*.ts",
    "Scripts/**/*.d.ts",
    //"Scripts/app.ts",
    "Scripts/corext.ts",
    "Scripts/corext.utilities.ts",
    "Scripts/corext.browser.ts",
    "Scripts/corext.globals.ts",
    "Scripts/corext.polyfills.ts",
    "Scripts/corext.scripts.ts",
    //"Scripts/corext.vdom.canvas.ts",
    //"Scripts/corext.vdom.ts",
    //"Scripts/manifest.ts",
    "Scripts/System/CoreXT.System.ts",
    "Scripts/System/CoreXT.System.PrimitiveTypes.ts",
    "Scripts/System/CoreXT.System.IO.ts",
    "Scripts/System/CoreXT.System.Exception.ts",
    "Scripts/System/CoreXT.System.Events.ts",
    "Scripts/System/CoreXT.System.Diagnostics.ts",
    "Scripts/System/CoreXT.System.AppDomain.ts",
    "Scripts/System/CoreXT.System.Delegate.ts",
    "Scripts/System/CoreXT.System.Serialization.ts",
    "Scripts/System/CoreXT.System.Time.ts",
    //"Scripts/**/*.ts",
    "Scripts/test.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/**/*.ts",
    "Scripts/__references.ts",
    "Scripts/CoreXT.VDom.Canvas.ts",
    "Scripts/CoreXT.VDom.ts",
    "Scripts/Twitter/**/*.ts"
    //"Scripts/System/CoreXT.System.Platform*.ts",
    //"Scripts/System/CoreXT.System.Properties.ts",
    //"Scripts/System/CoreXT.System.AppDomain.ts"
  ]
}
