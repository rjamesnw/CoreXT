{
  "compilerOptions": {
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "traceResolution": true,
    "listFiles": true,
    "diagnostics": true,
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    //"typeRoots": [ "typings" ],
    "sourceMap": true,
    "target": "es2015", // ES6
    "outDir": "wwwroot/js",
    "rootDir": "Scripts"
  },
  "include": [
    "typings/**/*.ts",
    "Scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/**/*.ts",
    "Scripts/__references.ts",
    "Scripts/CoreXT.VDom.Canvas.ts",
    "Scripts/CoreXT.VDom.ts",
    "Scripts/Twitter/**/*.ts"//,
    //"Scripts/System/CoreXT.System.Platform*.ts",
    //"Scripts/System/CoreXT.System.Properties.ts",
    //"Scripts/System/CoreXT.System.AppDomain.ts"
  ]
}
