{
  "AppSettings": {
    /* In CoreXT, each application is listed here to defined settings for each one separately. */
    "CoreXT.Demos": {
      "ApplicationName": "CoreXT Demos",
      "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;port=3306;database=xtdemo;user=xtdemo;password=Xt!Demo;sslmode=none;ConnectionTimeout=30"
      }
    },

    "configurations": {
      "Debug": {
        "buildOptions": {
          "define": [ "DEBUG", "TRACE" ],
          "optimize": false
        }
      },
      "Release": {
        "buildOptions": {
          "define": [ "RELEASE", "TRACE" ],
          "optimize": true
        }
      }
    },

    "Logging": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Debug",
        "System": "Information",
        "Microsoft": "Information"
      }
    }
  }
}

